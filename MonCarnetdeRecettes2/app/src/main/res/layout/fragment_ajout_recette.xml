<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_ajout">

    <TextView
        android:id="@+id/tvAjout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ajout_d_une_recette"
        android:textAlignment="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"

        android:rowCount="4">


        <EditText
            android:id="@+id/editTextNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewRecette"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_height="wrap_content"
            android:text="@string/le_titre_de_la_recette" />

        <TextView
            android:id="@+id/textViewContenu"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_height="wrap_content"
            android:text="@string/le_contenu_de_la_recette" />

        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:text="@string/la_note_de_la_recette" />

        <Button
            android:id="@+id/buttonValider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Valider"/>

        <Button
            android:id="@+id/buttonAnnuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Annuler"/>

        <EditText
        android:id="@+id/editTextContenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_column="1"
        android:layout_row="1"/>

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_column="1"
            android:layout_row="2"/>
    </GridLayout>

</LinearLayout>